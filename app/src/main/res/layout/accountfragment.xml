<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingTop="20dp"
            android:paddingEnd="20dp"
            android:paddingBottom="100dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/profile" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/edittextbtnbg"
                android:orientation="horizontal"
                android:padding="13dp">

                <com.ubi.android.utils.ui.PoppinsMediumEditTextView
                    android:id="@+id/firstnametv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:hint="@string/first_name"
                    android:inputType="textPersonName"
                    android:maxLength="32"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textColorHint="#707070"
                    android:textSize="12dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/edittextbtnbg"
                android:orientation="horizontal"
                android:padding="13dp">

                <com.ubi.android.utils.ui.PoppinsMediumEditTextView
                    android:id="@+id/lastnametv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:hint="@string/last_name"
                    android:inputType="textPersonName"
                    android:maxLength="32"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textColorHint="#707070"
                    android:textSize="12dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/edittextbtnbg"
                android:orientation="horizontal"
                android:padding="13dp">

                <com.ubi.android.utils.ui.PoppinsMediumEditTextView
                    android:id="@+id/mobiletv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:hint="@string/phone"
                    android:inputType="phone"
                    android:maxLength="13"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textColorHint="#707070"
                    android:textSize="12dp" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/phoneicon" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/edittextbtnbg"
                android:orientation="horizontal"
                android:padding="13dp">

                <com.ubi.android.utils.ui.PoppinsMediumEditTextView
                    android:id="@+id/emailtv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:maxLength="64"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textColorHint="#707070"
                    android:textSize="12dp" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/emailicon" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/edittextbtnbg"
                android:orientation="horizontal"
                android:padding="13dp">

                <com.ubi.android.utils.ui.PoppinsMediumEditTextView
                    android:id="@+id/citytv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:hint="@string/city"
                    android:inputType="textPostalAddress"
                    android:maxLength="128"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textColorHint="#707070"
                    android:textSize="12dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittextbtnbg"
                android:orientation="horizontal"
                android:padding="13dp">

                <com.ubi.android.utils.ui.PoppinsMediumEditTextView
                    android:id="@+id/companyname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:hint="@string/company_name"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textColorHint="#707070"
                    android:textSize="12dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittextbtnbg"
                android:orientation="horizontal"
                android:padding="13dp">

                <com.ubi.android.utils.ui.PoppinsMediumEditTextView
                    android:id="@+id/companyvideo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:hint="@string/company_video"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textColorHint="#707070"
                    android:textSize="12dp" />

            </LinearLayout>

            <Spinner
                android:id="@+id/genderspinner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittextbtnbg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittextbtnbg"
                android:orientation="horizontal"
                android:padding="13dp">

                <com.ubi.android.utils.ui.PoppinsMediumTextView
                    android:id="@+id/dob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:editable="false"
                    android:hint="@string/date_of_birth"
                    android:textColor="@color/black"
                    android:textColorHint="#707070"
                    android:textSize="12dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittextbtnbg"
                android:orientation="horizontal"
                android:padding="13dp">

                <com.ubi.android.utils.ui.PoppinsMediumEditTextView
                    android:id="@+id/education"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:hint="@string/education"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textColorHint="#707070"
                    android:textSize="12dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittextbtnbg"
                android:orientation="horizontal"
                android:padding="13dp">

                <com.ubi.android.utils.ui.PoppinsMediumEditTextView
                    android:id="@+id/about"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:gravity="top"
                    android:hint="@string/about"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textColorHint="#707070"
                    android:textSize="12dp" />

            </LinearLayout>

            <com.ubi.android.utils.ui.PoppinsMediumButton
                android:id="@+id/submitbtntv"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/logintabbtnbg"
                android:text="@string/update_profile"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>