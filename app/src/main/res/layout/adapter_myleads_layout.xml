<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainlay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image"
                android:layout_width="60dp"
                android:layout_marginTop="10dp"
                android:layout_height="60dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/myleadchatic" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.ubi.android.utils.ui.PoppinsMediumTextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sdsad"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <com.ubi.android.utils.ui.PoppinsRegularTextView
                android:id="@+id/mobiletv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sdsad"
                android:textColor="@color/black"
                android:textSize="13dp" />

            <com.ubi.android.utils.ui.PoppinsRegularTextView
                android:id="@+id/addresstv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sdsad"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <com.ubi.android.utils.ui.PoppinsRegularTextView
                android:id="@+id/locationtv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="location"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <com.ubi.android.utils.ui.PoppinsRegularTextView
                android:id="@+id/sharecatlog"
                android:layout_width="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_height="wrap_content"
                android:background="@drawable/sharecatlogbg"
                android:paddingStart="25dp"
                android:paddingTop="5dp"
                android:paddingEnd="25dp"
                android:paddingBottom="5dp"
                android:text="@string/share_catlog"
                android:textColor="#02B842"
                android:textSize="13dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/whatsappicon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/ic_whatsappicon" />

            <ImageView
                android:id="@+id/callappicon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/ic_callicon" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>