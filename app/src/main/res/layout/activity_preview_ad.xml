<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.PreviewAdActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_top_bg"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">

        <LinearLayout
            android:id="@+id/backlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="5dp"
                app:srcCompat="@drawable/ic_backwhite" />

            <com.ubi.android.utils.ui.MontserratSemiBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:text="Back"
                android:textColor="@color/white"
                android:textSize="15dp" />
        </LinearLayout>

        <com.ubi.android.utils.ui.PoppinsBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/preview"
            android:textColor="@color/white"
            android:textSize="18dp" />
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <com.ubi.android.utils.ui.PoppinsMediumTextView
                    android:id="@+id/pagecount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:padding="15dp"
                    android:textColor="#202020"
                    android:textSize="15dp" />
            </RelativeLayout>

            <com.ubi.android.utils.ui.PoppinsMediumTextView
                android:id="@+id/pendingtv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/pending"
                android:textColor="@color/black"
                android:textSize="13dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/previewdetailbg"
                android:orientation="vertical"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.ubi.android.utils.ui.PoppinsMediumTextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#3F4585"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <com.ubi.android.utils.ui.PoppinsMediumTextView
                        android:id="@+id/pricetv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="#DF0000"
                        android:textSize="17dp" />

                    <com.ubi.android.utils.ui.PoppinsMediumTextView
                        android:id="@+id/expiry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#4B4B4B"
                        android:textSize="15dp" />
                </LinearLayout>
            </LinearLayout>

            <com.ubi.android.utils.ui.PoppinsMediumTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/description"
                android:textColor="#4B4B4B"
                android:textSize="15dp" />

            <com.ubi.android.utils.ui.PoppinsRegularTextView
                android:id="@+id/desctv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#4B4B4B"
                android:textSize="14dp" />

            <com.ubi.android.utils.ui.PoppinsMediumTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:visibility="gone"
                android:text="@string/location"
                android:textColor="#4B4B4B"
                android:textSize="15dp" />

            <com.ubi.android.utils.ui.PoppinsRegularTextView
                android:id="@+id/locationtv"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#4B4B4B"
                android:textSize="14dp" />

            <com.ubi.android.utils.ui.PoppinsMediumTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/ad_posted_at"
                android:textColor="#4B4B4B"
                android:textSize="15dp" />

            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="100dp"
                tools:context="com.example.tutorialspoint7.myapplication.MapsActivity" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.ubi.android.utils.ui.PoppinsMediumButton
                    android:id="@+id/sellbtn"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/sellfasternowbg"
                    android:text="@string/home"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="13dp" />

                <LinearLayout
                    android:id="@+id/applybtnlay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.ubi.android.utils.ui.PoppinsRegularTextView
                        android:id="@+id/applybtn"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:background="@drawable/paybtn"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="@string/sell_faster_now"
                        android:textColor="@color/white"
                        android:textSize="13dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>