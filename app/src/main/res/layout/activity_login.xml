<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:src="@drawable/logo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/loginbtnheaderbg"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="2dp">

            <RelativeLayout
                android:id="@+id/emaillay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/logintabbtnbg">

                <com.ubi.android.utils.ui.PoppinsMediumTextView
                    android:id="@+id/emailtv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/email"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/phonelay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/loginbtnheaderbg">

                <com.ubi.android.utils.ui.PoppinsMediumTextView
                    android:id="@+id/phonenumbertv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/phone_number"
                    android:textAllCaps="false"
                    android:textColor="@color/black" />
            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/emailmainlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittextbtnbg"
            android:orientation="horizontal"
            android:padding="13dp">

            <com.ubi.android.utils.ui.PoppinsMediumEditTextView
                android:id="@+id/emailetv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:maxLength="64"
                android:maxLines="1"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:textColorHint="#707070"
                android:textSize="12dp" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/emailicon" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/passwordmainlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittextbtnbg"
            android:orientation="horizontal"
            android:padding="13dp">

            <com.ubi.android.utils.ui.PoppinsMediumEditTextView
                android:layout_width="match_parent"
                android:id="@+id/passwordetv"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:maxLength="32"
                android:maxLines="1"
                android:background="@color/transparent"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHint="#707070"
                android:textSize="12dp" />

            <ImageView
                android:id="@+id/showpassword"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/password" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/phonemainlay"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittextbtnbg"
            android:orientation="horizontal"
            android:padding="15dp">

            <com.ubi.android.utils.ui.PoppinsMediumEditTextView
                android:layout_width="match_parent"
                android:id="@+id/phoneetv"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:hint="Phone"
                android:maxLength="13"
                android:maxLines="1"
                android:inputType="phone"
                android:textColor="@color/black"
                android:textColorHint="#707070"
                android:textSize="15dp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/phoneicon" />
        </LinearLayout>

        <com.ubi.android.utils.ui.PoppinsMediumButton
            android:id="@+id/loginbtn"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/logintabbtnbg"
            android:text="@string/login"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <com.ubi.android.utils.ui.PoppinsMediumTextView
            android:id="@+id/forgotpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="@string/forgot_password"
            android:textColor="@color/appcolor" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <com.ubi.android.utils.ui.PoppinsMediumTextView
            android:id="@+id/registertv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textColor="#333333" />
    </LinearLayout>
</LinearLayout>